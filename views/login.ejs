<!DOCTYPE html>
<html>

<%- include("templates/header") %>

  <body>

    <section class="section">
      <div class="maincolumns columns is-desktop is-vcentered">
        <div class="column is-4 is-offset-4 has-background-light is-light container" style="border-radius: 25px;">
          <!-- Logging in with creds -->
          <form action="/loggingin" method="post">
            <div class="field">
              <p class="control has-icons-left has-icons-right">
                <input class="input" name="email" type="email" placeholder="Email" />
                <span class="icon is-small is-left">
                  <i class="fas fa-envelope"></i>
                </span>
              </p>
            </div>
            <div class="field">
              <p class="control has-icons-left">
                <input class="input" name="password" type="password" placeholder="Password" />
                <span class="icon is-small is-left">
                  <i class="fas fa-lock"></i>
                </span>
              </p>
              <% if (locals.message) {%>
                <p class="help is-danger">
                  <%= message %>
                </p>
                <% }%>
            </div>
            <div class="columns is-mobile ">
              <div class="column is-3">
                <button class="button is-light">Login</button>
              </div>
              <div class="column">
                <a href="/signup" class="button is-primary">
                  <strong>Sign up</strong>
                </a>
              </div>
            </div>
          </form>
        </div>
      </div>
      </div>
    </section>
  </body>

</html>
