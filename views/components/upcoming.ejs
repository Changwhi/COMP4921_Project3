<!DOCTYPE html>
<html>

<body>
    <section class="section">
        <div class="maincolumns columns is-desktop">
            <div class="column is-10 is-offset-1 has-background-white" style="border-radius: 25px;">
                <div class="card" style="margin-left: 20%; margin-right: 20%;">
                    <div class="card-content">
                        <div class="content">
                            <div id="upcomingDayCalendar" style="min-height: 600px;"></div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
    <script>
        const upcomingCalendarEl = document.getElementById('upcomingDayCalendar');
        let upcomingDayArrayData = JSON.parse('<%- JSON.stringify(locals.calendar_data) %>');
        let upcomingCalendar;

        document.addEventListener('DOMContentLoaded', function () {
            let randomSelectedColor;
            let tempColor;
            function getRandomColorWeek() {
                let red = Math.floor(Math.random() * 256);
                let green = Math.floor(Math.random() * 256);
                let blue = Math.floor(Math.random() * 256);
                let randomColor = 'rgb(' + red + ',' + green + ',' + blue + ')';
                return randomColor;
            }
            upcomingCalendar = new FullCalendar.Calendar(upcomingCalendarEl, {
                timeZone: 'UTC',
                initialView: 'dayGridDay',
                events: upcomingDayArrayData,
                editable: false,
                selectable: false,

            });
            upcomingCalendar.next();
            upcomingCalendar.render();

        });
    </script>
</body>

</html>