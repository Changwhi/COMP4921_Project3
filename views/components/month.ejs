<!DOCTYPE html>
<html>
<%- include("../templates/header") %>

    <head>
        <link rel="stylesheet" href="https://uicdn.toast.com/calendar/latest/toastui-calendar.min.css" />
        <script src="https://uicdn.toast.com/calendar/latest/toastui-calendar.min.js"></script>
    </head>

    <body>
        <section class="section has-background-light">
            <div class="maincolumns columns is-desktop">
                <div class="column is-10 is-offset-1 has-background-white" style="border-radius: 25px;">
                    <div class="card" style="">
                        <div class="card-content">
                            <div class="content">
                                <div id="calendar" style="height: 600px;"></div>
                            </div>
                        </div>
                    </div>
                </div>
        </section>

        <script>
            const Calendar = tui.Calendar;
        </script>
        <script>
            document.addEventListener("DOMContentLoaded", (event) => {
                const container = document.getElementById('calendar');
                const options = {
                    defaultView: 'month',
                    timezone: {
                        zones: [
                            {
                                timezoneName: 'America/Vancouver',
                                displayLabel: 'Vancouver',
                            }
                        ],
                    },
                    calendars: [
                        {
                            id: 'cal1',
                            name: 'Personal',
                            backgroundColor: '#03bd9e',
                        },
                        {
                            id: 'cal2',
                            name: 'Work',
                            backgroundColor: '#00a9ff',
                        },
                    ],
                };

                const calendar = new Calendar(container, options);
                calendar.setOptions({
                    week: {
                        taskView: false,
                    },
                });
                calendar.createEvents([
                    {
                        id: 'event1',
                        calendarId: 'cal2',
                        title: 'Party meeting',
                        start: '2023-11-23T09:00:00',
                        end: '2023-11-23T11:00:00',
                    },
                    {
                        id: 'event2',
                        calendarId: 'cal1',
                        title: 'Lunch appointment',
                        start: '2023-11-23T12:00:00',
                        end: '2023-11-23T13:00:00',
                    },
                    {
                        id: 'event3',
                        calendarId: 'cal2',
                        title: 'Vacation',
                        start: '2023-11-20',
                        end: '2023-11-21',
                        isAllday: true,
                        category: 'allday',
                    },
                ]);
            });

        </script>
    </body>

</html>